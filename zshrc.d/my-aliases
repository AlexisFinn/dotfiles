function chpwd() {
    if [ -r $PWD/bash_aliases.sh ]; then
        source $PWD/bash_aliases.sh
    fi
    if [ -r $PWD/bash-aliases.sh ]; then
        source $PWD/bash_aliases.sh
    fi
}
